{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
<table>

    <h2>liste des Catégorie</h2>
    
    <tr>
        <th>Nom</th>
    </tr>
    
    {% for categorie in categories %}
    <tr>
        <td>{{categorie.nom}}</td>
    </tr>
    {% endfor %}
    <a href="{{ path('new_categorie') }}">Nouvelle catégorie</a></br>

</table>
{% endblock %}
