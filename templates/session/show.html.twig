{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
    <h1> Detail session</h1>
    
        <h2>{{session.formation}}</h2>
        <p>
            Formateur : {{session.formateur}}
            DÃ©but de la session : {{session.dateDebut|date('d-m-Y')}}
            Fin de la session : {{session.dateFin|date('d-m-Y')}}
            place disponible : {{session.nbPlace}}
        </p>  


        <h2>liste inscrit</h2>
            {% for inscrit in session.stagiaires %}
                {{inscrit}} <a href="{{ path('moins_session_stagiaire', {'id': inscrit.id}) }}">enlever</a></br>
            {% endfor %}
        <h2>liste non-inscrit</h2>
            {% for nonInscrit in nonInscrits %}
                {{nonInscrit}} <a href="{{ path('edit_session_stagiaire'), {'id': inscrit.id} }}">ajouter</a></br>
            {% endfor %}
        <h2>liste module</h2>
            {% for programme in session.programmes %}
                {{programme.module}} {{programme.nbJours}} </br>
            {% endfor %}
        <h2>liste non module</h2>
            {% for nonProgramme in nonProgrammes %}
                {{nonProgramme.module}} {{nonProgramme.nbJours}}</br>
            {% endfor %}
{% endblock %}
